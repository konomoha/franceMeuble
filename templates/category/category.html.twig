{% extends 'base.html.twig' %}

{% block title %}France Meuble | Categorie{% endblock %}

{% block body %}

<h1 class="text-center mb-5">{{datacat.nom}}</h1>
<div class="categories row justify-content-around align-items-center">

    {% for data in datacat.souscategories %}
    <div class="col-3 text-center card carte_categorie">
       <h5 class="fw-bold fst-italic">{{data.nom|capitalize}}</h5>
        <div class="mb-3"><a href="{{path('boutique_subcategory_show', {'id': data.id})}}"><img src="{{ asset('img/photos/' ~ data.photo)}}" alt="" class="img-fluid"></a></div> 
    </div>
    {% endfor %}
</div>
{% endblock %}