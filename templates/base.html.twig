<!doctype html>
<html lang="en">
    <head>

        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

        {# Google font #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Kaushan+Script&display=swap" rel="stylesheet">  

        <link href="{{asset('css/style.css')}}" rel="stylesheet">
        
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/css/splide.min.css">
        <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>
       

        <title>France Meubles | Accueil</title>

    </head>
  
  <body>
  <div class="container">
  <header class="row justify-content-around align-items-center">

    

   <div class="col-2  text-center"><a href="{{path('home')}}"><img src="{{asset('img/photos/logo.png')}}" alt="" class="logo img-fluid"></a></div>

   <div class="col-7 text-center row justify-content-end"><form class="d-flex">
        <input class="form-control me-2 border-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-success" type="submit">Search</button>
      </form></div>

   <div class="col-3  row justify-content-end text-center">

      <div class="col-6 p-0 text-center"><i class="bi bi-person-fill"></i> Mon Compte</div>
      <div class="col-6 p-0  text-center"><i class="bi bi-cart"></i> Mon Panier</div>

   </div>

  </header>
  <div class="container">
    <nav class="row justify-content-start mb-3 p-2">
      {# <div class="col-2 bg-danger p-2 mx-5 text-center">Nos Produits</div>
      <div class="col-2 bg-danger p-2 mx-5 text-center">Nos Collections</div>
      <div class="col-2 bg-danger p-2 mx-5 text-center">Maryam coutures</div> #}

      <button class="btn btn-primary col-2 mx-2 fw-bold" data-bs-toggle="offcanvas" data-bs-target="#offcanvasProduits" type="button" aria-controls="offcanvasProduits">
        Nos produits
      </button>
     
      <button class="btn btn-primary col-2 mx-2 fw-bold" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasCollections" aria-controls="offcanvasCollections">
        Nos Collections
      </button>

      <button class="btn  col-2 mx-2 p-1 text-white maryam fst-italic"><a href="https://www.facebook.com/maryam.elkhiarie.1" target="_blank">Maryam Couture</a></button>

      <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasProduits"        aria-labelledby="offcanvasProduitLabel">

        <div class="offcanvas-header">

          <h3 class="offcanvas-title" id="offcanvasProduitLabel">Tous nos produits</h3>

          <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>

        </div>

        <div class="offcanvas-body">

          <div class="dropdown mt-3">

            {{ render(controller('App\\Controller\\CategoryController::allCategories'))}}

          </div>

        </div>

      </div>

      <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasCollections"        aria-labelledby="offcanvasCollectionLabel">

        <div class="offcanvas-header">

          <h3 class="offcanvas-title" id="offcanvasCollectionLabel">Toutes nos collections</h3>

          <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>

        </div>

        <div class="offcanvas-body">

          <div class="dropdown mt-3">

            {{ render(controller('App\\Controller\\AssortimentController::allAssortiments'))}}

          </div>

        </div>

      </div>
    </nav>
  </div>

    <main>
        
        {% block body %}
        {% endblock %}

    </main>

    <footer class="row justify-content-around align-items-center">
      

      <div class=" col-2 mt-4 mb-2 text-center text-white">
        <h5 class="fw-bold">Services</h5>
        <ul class="text-start">
        <li>Paiement x2, x3 ou x4</li>
        <li>Livraison</li>
        <li>Montage et installation</li>
        <li>Nous contacter</li>
        </ul>
      </div>

      <div class=" col-2 mt-4 mb-2 text-center text-white ">
        <h5 class="fw-bold" >Informations légales</h5>
        <ul class="text-start p-0">
          <li>CGV France-Meuble</li>
          <li>Politique des données personnelles</li>
          <li>Plan du site</li>
        </ul>
      </div>

      <div class=" col-2 mt-4 mb-2 text-center text-white">
        <h5 class="fw-bold" >Nous suivre</h5>
        <div class="row justify-content-around col-8 mx-auto"><i class="bi bi-instagram col-5"></i> <i class="bi bi-facebook col-5"></i></div>
      </div>
    
      <p class="text-center align-self-end text-white my-3">&copy;France Meuble 2022, tous droits réservés</p>
        
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  
  {% block javascripts %}

  <script src="{{ asset("js/slide.js") }}" type="text/javascript"></script>

 {% endblock %}

  </body>
</html>
