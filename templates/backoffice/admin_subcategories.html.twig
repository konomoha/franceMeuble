{% extends "base_admin.html.twig" %}

{% block title %}
    France Meuble | Gestion des sous-catégories
{% endblock %}

{% block body %}
    <h1 class="text-center mb-5">Liste des Sous-catégories</h1>
    {# {{dump(subcategory)}} #}

    {% for message in app.flashes('success') %}

        <div class="bg-success col-5 text-center text-white mx-auto my-4 p-3">{{message}}</div>
        
    {% endfor %}
   


    <table class="table table-striped text-center s" id="table-backoffice">
    <thead>
        <tr>
        {% for data in colonnes %}
        {# capitalize : filtre Twig permettant de mettre la 1ère lettre de la chaine de caractères en majuscule #}
            <th class="border border-1 border-dark">{{data|capitalize}}</th> 
        {% endfor %}
            <th class="border border-1 border-dark">Catégories</th>
            <th class="border border-1 border-dark">Nb produits associés</th>
            <th class="border border-1 border-dark">Action</th>
        </tr>
    </thead>
    <tbody>

        {% for data in subcategory %}
            <tr>
                <td>{{data.id}}</td>
                <td>{{ data.nom}}</td>
                <td><img src="{{ asset('img/photos/' ~ data.photo)}}" alt="{{data.nom}}"></td>
                <td>
                    <p>{{data.categorie.nom}}</p>
                </td>
                <td>
                    <p>{{data.produits|length}}</p>
                </td>
                <td>
                    <a href="#" onclick="return(confirm('Voulez-vous vraiment supprimmer l\'article n° {{data.id}}?'));"><span > <i class="bi bi-trash"></i></span></a>
                    <a href="{{path('app_admin_subcategories_edit', {'id': data.id})}}"><span><i class="bi bi-caret-up-square"></i></span></a>
                    <a href="{{path('app_admin_subcategories_add')}}"><span><i class="bi bi-plus-square-fill"></i></span></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
    </tr></table>


    
{% endblock %}