{% extends "base_admin.html.twig" %}

{% block title %}
    France meuble | Ajout - Theme
{% endblock %}

{% block body %}

<h1 class="text-center my-4">Ajouter un th√®me</h1>

 {{form_start(formTheme, {'attr':{'class':'col-3 mx-auto mt-3'}}) }}

    {{form_row(formTheme.nom, {'attr':{'class':'form-control mb-4'}})}}
    {{form_row(formTheme.description, {'attr':{'class':'form-control'}})}}
    {{form_row(formTheme.photo, {'attr':{'class':'form-control'}})}}

    {% if photoActuelle %}
        <p>
            <em>Vous pouvez uploader une nouvelle photo si vous souhaitez la modifier</em>
            <img src="{{ asset('img/photos/' ~ photoActuelle)}}"  class="col-12 img-responsive">
        </p>

    {% endif %}


    <div class="text-center my-4">
        <button class="btn btn-dark text-white">Ajouter
        </button>
    </div>

 {{form_end(formTheme)}}

 {% endblock %}